<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="style.css">
  <title>Document</title>
</head>

<%# Main Body %> 
<body>
  <div class="container">
    <h1>My TinyURL</h1>
    <%# Create ShorUrl %> 
    <form action="/api/shortUrls" method="POST" class="my-4 form-inline">
      <div class="container row">
      <label for="fullUrl">Enter a long URL to make a TinyURL</label>
      </div>
      <div>
      <input required type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      </div>
      <div class="container row">
      <label for="shortUrl">Customize your link</label>
      </div>
      <div>
      <input placeholder="enter alias" type="text" name="shortUrl" id="shortUrl" class="form-control col mr-2">
      </div>
      <button class="btn btn-success" type="submit">Make TinyURL</button>
    </form>
    <%# /Create ShorUrl %>
    
    <%# Table Display %> 
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.shortUrls) { %>
         <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td>
              <a href="/edit" class="btn">
                <span><i class="fas fa-pencil-alt"></i></span>
              </a>
              <a href="#" class="btn">
                <span><i class="fas fa-dumpster"></i></span>
              </a>
            </td>
          </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
    <%# /Table Display %>
  </div>

  <%# Error Messages %> 
  <div>
  <% if (locals.error) { %>
   <p class="error"><%= error %> </p>
  <% } %>
  </div>
  <%# /Error Messages %> 

</body>
<%# Main Body %>
</html>

