<table class="table table-striped table-responsive">
  <span class="alert">Tiny Link Copied!</span>
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody id="urlTable">
        <% if (locals.allUrls) { %>
         <% allUrls.forEach(eachUrl => { %>
          <tr>
            <td><a href="<%= eachUrl.full %>"><%= eachUrl.full %></a></td>
            <td><a href="<%= eachUrl.short %>"><%= eachUrl.short %></a></td>
            <td>
              <a class="btn copy">
                <span><i onclick="copyHandler(this)" data="<%= eachUrl.short %>" class="fas fa-copy"></i></span>
              </a>
              <a href="/edit_url?id=<%= eachUrl._id %> " class="btn">
                <span><i class="fas fa-pencil-alt"></i></span>
              </a>
              <a class="btn delete" data-id=<%= eachUrl._id %> >
                <span><i onclick="deleteHandler(this)" data="<%= eachUrl._id %>" class="fas fa-dumpster"></i></span>
              </a>
            </td>
          </tr>
          <% }) %>
        <% } %>
      </tbody>
</table>
